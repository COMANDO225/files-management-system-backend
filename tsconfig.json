{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": ".", // Cambiar para incluir todo el proyecto
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"resolveJsonModule": true
	},
	"include": ["src", "prisma"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"files": ["types.d.ts"]
}
